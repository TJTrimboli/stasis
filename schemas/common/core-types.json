{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://utamf.org/schemas/common/core-types.json",
    "title": "UTAMF Core Types",
    "description": "Core type definitions for UTAMF",
    "definitions": {
        "string": {
            "type": "string"
        },
        "integer": {
            "type": "integer"
        },
        "boolean": {
            "type": "boolean"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "date": {
            "type": "string",
            "format": "date"
        },
        "url": {
            "type": "string",
            "format": "uri"
        },
        "binary": {
            "type": "string",
            "contentEncoding": "base64"
        },
        "hex": {
            "type": "string",
            "pattern": "^[0-9a-fA-F]+$"
        },
        "identifier": {
            "type": "string",
            "pattern": "^TA[0-9]{2}[A-Z]{3}-[A-Z]{3}[0-9]{3}$"
        }
    }
}